<h1> Seach Result </h1>
<% @merge.each do |i| %>
	<!--Card Narrower-->
	<div class="card card-cascade">

	    <!--Card image-->
	    <div class="view overlay hm-white-slight">
	        <img src="https://mdbootstrap.com/img/Photos/Lightbox/Thumbnail/img%20(147).jpg" class="img-fluid" alt="">
	        <a>
	            <div class="mask"></div>
	        </a>
	    </div>
	    <!--/.Card image-->

	    <!--Card content-->
	    <div class="card-body">
	        <!--Title-->
	        <h4 class="card-title" style="font-weight: bold;"><%= i[1].title %> </h4>
	        <!--Text-->
	        <p class="card-text">Location: <%= i[1].location %></p>
	        <p class="card-text">Number of guest: <%= i[1].number_of_guest %></p>
	        <p class="card-text">Price per night: $<%= i[1].price %></p>
	        <p class="card-text">Type of room: <%= i[1].type_of_room %></p>
	        <p class="card-text">Category: <%= i[1].category %></p>
	        <a class="btn btn-primary">Book now</a>
	        <p>Date: <input type="text" id="datepicker"></p>
	    </div>
	    <!--/.Card content-->
	    <h10 class="hosted">Hosted By:<%= i[0] %></h10>
	</div>
	<br> 
	<!--/.Card Narrower-->
<% end %>

